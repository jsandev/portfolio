---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<a
  href=""
  class="relative group font-ubuntu-condensed text-[1.125rem] text-primary"
>
  {title}
  <span
    class="absolute -bottom-[5px] left-[50%] -translate-x-1/2 w-[0.25rem] h-[0.25rem] rounded-full bg-primary opacity-0 group-hover:opacity-100 transition-[opacity] duration-[150ms] ease-in"
  ></span>
</a>
