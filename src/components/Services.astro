---
import { Image } from 'astro:assets';

import { getI18N } from '../i18n';

import iconFrontend from "../assets/icons/icon-frontend.svg";
import iconApps from "../assets/icons/icon-apps.svg";
import iconBackend from "../assets/icons/icon-backend.svg";

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section
  id="services"
  class="w-full h-full py-[8rem] sm:py-[10rem] px-[1.5rem] sm:px-[2rem] md:px-[3rem] lg:px-[4rem]"
  style="background: rgba(38, 38, 38, 0.02)"
>
  <div
    class="w-full max-w-[76.5rem] mx-auto flex flex-col items-center justify-center gap-[3.125rem]"
  >
    <div class="flex flex-col items-center gap-[0.375rem]">
      <h4 class="font-medium text-[1rem] xs:text-[1.125rem] text-primary60 text-center">
        {i18n.SERVICES.TITLE}
      </h4>
      <h1
        class="font-medium text-[1.5rem] xs:text-[1.75rem] to-primary text-center tracking-[-0.04em]"
      >
        {i18n.SERVICES.DESCRIPTION}
      </h1>
    </div>
    <div class="flex flex-wrap items-center justify-center gap-[3.125rem]">
      <div
        class="w-full xs:max-w-[14.375rem] flex flex-col items-center gap-[2.125rem] bg-white rounded-[1rem] py-[2.375rem] px-[1.25rem] shadow-[0px_0px_30px_rgba(0,0,0,0.05)] hover:shadow-[0px_0px_30px_rgba(0,0,0,0.10)]"
      >
        <div
          class="w-[5rem] h-[5rem] grid place-content-center bg-primary rounded-[1rem]"
        >
          <Image src={iconFrontend} alt="Frontend" />
        </div>
        <div class="w-full flex flex-col items-center gap-[1rem]">
          <h3
            class="font-medium text-[1.125rem] leading-[1.125rem] text-center"
          >
            {i18n.SERVICES.FRONTEND.TITLE}
          </h3>
          <p
            class="font-ubuntu-condensed text-[1rem] text-center text-[#3E3E41]"
          >
            {i18n.SERVICES.FRONTEND.DESCRIPTION}
            <br>
            <br>
            Stack: ReactJs, Nextjs, Typescript, TailwindCss, Redux
          </p>
        </div>
      </div>
      <div
        class="w-full xs:max-w-[14.375rem] flex flex-col items-center gap-[2.125rem] bg-white rounded-[1rem] py-[2.375rem] px-[1.25rem] shadow-[0px_0px_30px_rgba(0,0,0,0.05)] hover:shadow-[0px_0px_30px_rgba(0,0,0,0.15)]"
      >
        <div
          class="w-[5rem] h-[5rem] grid place-content-center bg-primary rounded-[1rem]"
        >
          <Image src={iconApps} alt="Apps" />
        </div>
        <div class="w-full flex flex-col items-center gap-[1rem]">
          <h3
            class="font-medium text-[1.125rem] leading-[1.125rem] text-center"
          >
            {i18n.SERVICES.MOBILE.TITLE}
          </h3>
          <p class="font-ubuntu-condensed text-[1rem] text-center text-[#3E3E41]">
            {i18n.SERVICES.MOBILE.DESCRIPTION}
            <br>
            <br>
            Stack: React Native CLI / Expo SDK
          </p>
        </div>
      </div>
      <div
        class="w-full xs:max-w-[14.375rem] flex flex-col items-center gap-[2.125rem] bg-white rounded-[1rem] py-[2.375rem] px-[1.25rem] shadow-[0px_0px_30px_rgba(0,0,0,0.05)] hover:shadow-[0px_0px_30px_rgba(0,0,0,0.10)]"
      >
        <div
          class="w-[5rem] h-[5rem] grid place-content-center bg-primary rounded-[1rem]"
        >
          <Image src={iconBackend} alt="Frontend" />
        </div>
        <div class="w-full flex flex-col items-center gap-[1rem]">
          <h3
            class="font-medium text-[1.125rem] leading-[1.125rem] text-center"
          >
            {i18n.SERVICES.BACKEND.TITLE}
          </h3>
          <p
            class="font-ubuntu-condensed text-[1rem] text-center text-[#3E3E41]"
          >
            {i18n.SERVICES.BACKEND.DESCRIPTION}
            <br>
            <br>
            Stack: Nodejs, Express.js, MongoDB, MySQL, GCP o AWS
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
