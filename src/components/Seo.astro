---
import { SEO } from "astro-seo";
import { getI18N } from "../i18n";

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})

const title = i18n.SEO_TITLE
const description = i18n.SEO_DESCRIPTION
const url = "https://portfolio-jsandev.vercel.app/"
---

<SEO
    title={title}
    description={description}
    canonical=""
    openGraph={{
        basic: {
            url,
            title,
            type: "website",
            image: "/banner.png",
        },
        image: {
            url: "/banner.png",
            width: 1200,
            height: 628
        }
    }}
    twitter={{
        creator: "@iam_sam0610",
        card: "summary",
        title,
        description,
        image: "/banner.png",
        imageAlt: title
    }}
    extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
    }}
/>