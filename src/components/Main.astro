---
import {Icon} from 'astro-icon/components'
import { Image } from 'astro:assets';

import photo from "../assets/images/me.svg";
import { getI18N } from '../i18n';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<section
  class="w-full relative h-full max-w-[76.5rem] flex flex-col-reverse justify-center items-center gap-[2.5rem] mg:gap-[3.25rem] mx-auto pt-[5rem] md:pt-[7.5rem] pb-[10rem] px-[1.5rem] sm:px-[2rem] md:px-[3rem] lg:px-[4rem] md:flex-row"
>
  <div class="">
    <Image src={photo} alt="Jimmy Sandoval" />
  </div>
  <div
    class="w-full max-w-[26.875rem] flex flex-col items-center md:items-start -mt-[2rem]"
  >
    <h5 class="font-medium text-[1rem] lg:text-[1.125rem] text-primary60 tracking-[-0.04em]">
      {i18n.MAIN.ABOUT_ME_TITLE}
    </h5>
    <h1 class="font-bold text-[2.5rem] lg:text-[3rem] text-primary text-center leading-[2.125rem] mt-[0.375rem] mb-[0.5rem] md:text-left">
      Jimmy Sandoval
    </h1>
    <h1
      class="font-medium text-[1.5rem] lg:text-[2rem] text-primary text-center leading-[2.125rem] md:text-left"
    >
      FullStack Developer
    </h1>
    <p
      class="font-ubuntu-condensed text-[1.125rem] lg:text-[1.25rem] text-center text-secondary leading-[1.5rem] mt-[0.75rem] mb-[1.5rem] md:mb-[1.875rem] md:text-left"
    >
      {i18n.MAIN.ABOUT_ME_DESCRIPTION}
    </p>

    <div class="w-full flex items-center justify-center md:justify-start gap-[0.75rem]">
      <a
        href="#contact"
        class="w-full max-w-[6.25rem] h-[2rem] grid place-content-center border-[1px] border-primary font-ubuntu-condensed text-[0.875rem] text-primary text-center rounded-[0.5rem] hover:bg-primary hover:text-white transition-[background] duration-[150ms]"
      >
        {i18n.MAIN.BUTTON.CONTACT_ME}
      </a>

      <a
        href="https://docs.google.com/document/d/1kb94Cuxim1KiNCDTu797XKLUQUpOqAk849nge03XnVA/edit?usp=sharing"
        target="_blank"
        class="w-full max-w-[120px] h-[2rem] flex items-center justify-center gap-[0.5rem] border-[1px] border-primary font-ubuntu-condensed text-[0.875rem] text-primary text-center rounded-[0.5rem] hover:bg-primary hover:text-white transition-[background] duration-[150ms]"
      >
        {i18n.MAIN.BUTTON.CV}
        <Icon name="mdi:cloud-download-outline" size={24} />
      </a>
    </div>
  </div>
</section>
